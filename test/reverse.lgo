LOAD "testlib.lgo

TO REVERSETEST.SMOKETEST

   ; the input is a word
   SIMPLEREPORTTEST [ REVERSE "abc  ] "cba
   SIMPLEREPORTTEST [ REVERSE "a    ] "a 
   SIMPLEREPORTTEST [ REVERSE "||   ] "||
   SIMPLEREPORTTEST [ REVERSE 123   ] 321
   SIMPLEREPORTTEST [ REVERSE 12.34 ] 43.21
   SIMPLEREPORTTEST [ REVERSE 1e5   ] "000001

   ; the input is a list
   SIMPLEREPORTTEST [ REVERSE [1 2 3]  ] [3 2 1]
   SIMPLEREPORTTEST [ REVERSE [1]      ] [1]
   SIMPLEREPORTTEST [ REVERSE []       ] []

END

TO REVERSETEST.BADINPUT

   ; bad number of inputs
   RUNNOTENOUGHINPUTSTEST [(REVERSE)]
   RUNTOOMANYINPUTSTEST   [(REVERSE [1 2 3] [4 5 6])]

   ; bad input
   RUNBADINPUTTEST [REVERSE {1 2 3}]
   RUNBADINPUTTEST [REVERSE {}]

END


TO REVERSETEST

   REVERSETEST.SMOKETEST
   REVERSETEST.BADINPUT

END
