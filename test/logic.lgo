LOAD "testlib.lgo

TO ORTEST

  FAILIFNOTFALSE [(OR) ]
  FAILIFNOTTRUE  [(OR "true)]
  FAILIFNOTFALSE [(OR "false)]

  FAILIFNOTFALSE [(OR "false "false)]
  FAILIFNOTTRUE  [(OR "true  "false)]
  FAILIFNOTTRUE  [(OR "false "true)]
  FAILIFNOTTRUE  [(OR "true  "true)]

  FAILIFNOTFALSE [(OR "false "FALSE "false "FALSE)]
  FAILIFNOTTRUE  [(OR "false "FALSE "false "TRUE)]

  RUNBADINPUTTEST [(OR 1)]
  RUNBADINPUTTEST [(OR 0)]
  RUNBADINPUTTEST [(OR "truex)]
  RUNBADINPUTTEST [(OR "falsex)]
  RUNBADINPUTTEST [(OR "true 1)]
  RUNBADINPUTTEST [(OR 1 "true)]
  RUNBADINPUTTEST [(OR "false 0)]
  RUNBADINPUTTEST [(OR 0 "false)]
END

TO ANDTEST

  FAILIFNOTTRUE  [(AND)]
  FAILIFNOTTRUE  [(AND "true)]
  FAILIFNOTFALSE [(AND "false)]

  FAILIFNOTFALSE [(AND "false "false)]
  FAILIFNOTFALSE [(AND "true  "false)]
  FAILIFNOTFALSE [(AND "false "true)]
  FAILIFNOTTRUE  [(AND "true  "true)]

  FAILIFNOTFALSE [(AND "TRUE "true "TRUE "false)]
  FAILIFNOTTRUE  [(AND "TRUE "true "TRUE "true)]

  RUNBADINPUTTEST [(AND 1)]
  RUNBADINPUTTEST [(AND 0)]
  RUNBADINPUTTEST [(AND "truex)]
  RUNBADINPUTTEST [(AND "falsex)]
  RUNBADINPUTTEST [(AND "true 1)]
  RUNBADINPUTTEST [(AND 1 "true)]
  RUNBADINPUTTEST [(AND "false 0)]
  RUNBADINPUTTEST [(AND 0 "false)]
END

TO NOTTEST

  FAILIFNOTFALSE [(NOT "true)]
  FAILIFNOTTRUE  [(NOT "false)]

  RUNNOTENOUGHINPUTSTEST [(NOT)]
  RUNBADINPUTTEST        [(NOT 0)]
  RUNBADINPUTTEST        [(NOT "truex)]
  RUNTOOMANYINPUTSTEST   [(NOT "true "true)]
END

TO LOGICTEST
  ORTEST
  ANDTEST
  NOTTEST
END

