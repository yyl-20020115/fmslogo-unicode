LOAD "testlib.lgo

TO BUTFIRSTTEST

   SIMPLEREPORTTEST [BF       [1 2 3] ] [2 3]
   SIMPLEREPORTTEST [BUTFIRST [1 2 3] ] [2 3]
   SIMPLEREPORTTEST [BUTFIRST     [1] ] []
   SIMPLEREPORTTEST [BUTFIRST "hello  ] "ello
   SIMPLEREPORTTEST [BUTFIRST "h      ] "||

   ; bad number of inputs
   RUNNOTENOUGHINPUTSTEST [(BUTFIRST)]
   RUNTOOMANYINPUTSTEST   [(BUTFIRST "word "toomany)]

   ; bad inputs
   RUNBADINPUTTEST [BUTFIRST []  ]
   RUNBADINPUTTEST [BUTFIRST "|| ]
   RUNBADINPUTTEST [BUTFIRST {1} ]

END
