LOAD "testlib.lgo

TO FONTFACENAMESTEST.SMOKETEST

   SIMPLEREPORTTEST [MEMBER? [System] FONTFACENAMES ] "true

END


TO FONTFACENAMESTEST.BADINPUT
    
   RUNTOOMANYINPUTSTEST   [(FONTFACENAMES "toomany)]

END

TO FONTFACENAMESTEST.MANUALTEST

  ; writes the alphabet with the default font from each font family
  REPEAT COUNT FONTFACENAMES [
     SETLABELFONT ITEM REPCOUNT FONTFACENAMES
     LABEL "ABCDEFGHIJKLMNOPQRSTUVWXYZ
     WAIT 30
     CLEARSCREEN
  ]
END

TO FONTFACENAMESTEST

   FONTFACENAMESTEST.SMOKETEST
   FONTFACENAMESTEST.BADINPUT

END

