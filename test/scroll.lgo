LOAD "testlib.lgo

TO SCROLLTEST.SMOKETEST
  ; Without a way to get the scroll position, the best we can do is
  ; test that the commands run without error.
  SCROLLX -100
  SCROLLX  100
  SCROLLX  0

  SCROLLY -100
  SCROLLY  100
  SCROLLY  0

END


TO SCROLLTEST.SCROLLX.BADINPUT

   RUNNOTENOUGHINPUTSTEST [(SCROLLX)]
   RUNTOOMANYINPUTSTEST   [(SCROLLX 0 "toomany)]

   ; bad input
   RUNDOESNTLIKEINPUTTEST [ SCROLLX "five   ]
   RUNDOESNTLIKEINPUTTEST [ SCROLLX 3.1415  ]
   RUNDOESNTLIKEINPUTTEST [ SCROLLX [1]     ]
   RUNDOESNTLIKEINPUTTEST [ SCROLLX {0}     ]

   SCROLLX 0 ; fix state (bug 475)
END

TO SCROLLTEST.SCROLLY.BADINPUT

   RUNNOTENOUGHINPUTSTEST [(SCROLLY)]
   RUNTOOMANYINPUTSTEST   [(SCROLLY 0 "toomany)]

   ; bad input
   RUNDOESNTLIKEINPUTTEST [ SCROLLY "five   ]
   RUNDOESNTLIKEINPUTTEST [ SCROLLY 3.1415  ]
   RUNDOESNTLIKEINPUTTEST [ SCROLLY [1]     ]
   RUNDOESNTLIKEINPUTTEST [ SCROLLY {0}     ]

   SCROLLY 0 ; fix state (bug 475)
END


TO SCROLLTEST

  SCROLLTEST.SMOKETEST
  SCROLLTEST.SCROLLX.BADINPUT
  SCROLLTEST.SCROLLY.BADINPUT

END
