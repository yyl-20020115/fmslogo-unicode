TO POTEST.LONGINPUT
   ; Prints some long lines to the commander.
   ; This is a regression test for Bug #361.

   ; Create a variable with a long value.
   localmake "longvalue REPEATWORD "A 1024

   DEFINE "POTEST.LONGINPUT.DEFINEDPROCEDUREWITHLONGLINE (list 
     [] ; no inputs
     (list "localmake ""longline :longvalue)
   )

   ; Write to the commander
   LOCALMAKE "previouswriter WRITER
   SETWRITE []

   ; Print the variable.
   PON "longvalue

   ; Print the procedure
   PO "POTEST.LONGINPUT.PROCEDUREWITHLONGLINE

   ; Print the procedure
   PO "POTEST.LONGINPUT.DEFINEDPROCEDUREWITHLONGLINE

   ; restore the current writer
   SETWRITE :previouswriter

END

